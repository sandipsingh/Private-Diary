<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dairy"
    android:orientation="vertical" >


 <ImageView
        android:id="@+id/header_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:src="@drawable/header" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:src="@drawable/diaryicon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:orientation="horizontal" >


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:text="Enter Password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="#FFFFFFFF" />


        <EditText
            android:id="@+id/edt_Pwd"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="min six digit" >
            
            <requestFocus />
        </EditText>

    </LinearLayout>


    <ImageView
        android:id="@+id/btn_login_Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:text="Ok"
        android:textColor="#FF000000" 
        android:src="@drawable/ok"/>




    <ImageView
        android:id="@+id/btn_fgt_Pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dip"
        android:text="Forgot password?"
        android:textColor="#FF000000" 
       android:src="@drawable/fpwd" />




    <TextView
        android:id="@+id/qtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qtext"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFFFF" />



    <EditText
        android:id="@+id/anstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#FF000000" />




    <ImageView
        android:id="@+id/btn_Ansok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:textColor="#FF000000"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ok" />

</LinearLayout>