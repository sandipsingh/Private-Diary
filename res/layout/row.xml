<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/row_bg"
    android:paddingBottom="10dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="10dip" >

    <TextView
        android:id="@+id/text_date"
        android:layout_width="89dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/date_bg"
        android:ellipsize="middle"
        android:gravity="center"
        android:maxLines="2"
        android:maxWidth="1dp"
        android:minLines="2"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="17dp"
        android:text="26 Dec"
        android:textColor="#000000"
        android:textSize="18dip" />


    <ImageView
        android:id="@+id/media_button"
        android:layout_width="22dip"
        android:layout_height="22dip"
        android:layout_alignParentRight="true"
        android:src="@drawable/file_button" />




    <TextView
        android:id="@+id/text_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_button"
        android:layout_toLeftOf="@+id/media_button"
        android:layout_toRightOf="@+id/text_date"
        android:autoLink="none"
        android:gravity="center"
        android:hint="..."
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="2"
        android:maxWidth="5dip"
        android:selectAllOnFocus="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer a ligula ut massa fermentum molestie. Aenean quis ante non libero pulvinar egestas. Aenean lobortis ipsum ac justo dapibus fringilla. Cras non elit mauris. Vestibulum nisi leo, bibendum quis aliquam consequat, rhoncus dictum augue. Integer ut dui et risus lacinia ultrices in eu augue. Nulla convallis hendrerit sem, non laoreet lorem porttitor eu. Phasellus eu magna felis, a porta justo."
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="12dip"
        android:width="5dip" />

</RelativeLayout>